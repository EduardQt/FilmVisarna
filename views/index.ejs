                crossorigin="anonymous"></script>
        <script defer>
            var date = undefined;
            var age = undefined;

            function onDateChange(event) {
                date = new Date(event.target.value);
                age = undefined;
                renderAllMovies();
            }

            function onAgeChange(event) {
                age = event.target.value;
                date = undefined;
                renderAllMovies();
            }

            function renderAllMovies() {
                let html = '';
                for (const movie of <%- JSON.stringify(movies) %>) {
                    if (date !== undefined && new Date(movie.release_date) <= date) {
                        continue;
                    }

                    if (age !== undefined && age < movie.min_age) {
                        continue;
                    }

                    html += `<div class="image-entry" data-bs-toggle="modal" data-bs-target="#exampleModal-${movie.id}">
                        <img src="${movie.image_url}" class="img-responsive">
                        </div>`;
                }

                $('.imagetiles')[0].innerHTML = html;
            }

            renderAllMovies();
        </script>
        <script>$('.owl-carousel').owlCarousel({
                stagePadding: 50,
                loop: true,
                margin: 0,
                dots: false,
                responsive: {
                    0: {
                        items: 1
